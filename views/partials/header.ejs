<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="../jquery/jquery.js"></script>
<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
<meta charset="utf-8">

<style>

body {
  margin: 42px;
  padding: 5px;
  font-family: 'Open Sans', sans-serif;
}

.navbar {
  position: absolute;
  right: 0px;
  left: 0px;
  top: 0px;
  display: flex;
  border-style: solid;
  border-width: 2px;
  border-color: grey;
  height: 42px;
  width: 100%;
}

div.nav-buttons {
  position: absolute;
  right: 0px;
  top: 0px;
}

form {
  float: right;
}

input {
  height: 42px;
  background-color: white;
  border-style: none;
}


</style>

<div class="navbar">
  <a href='/'><img src="https://s16.postimg.org/7x25s7vyd/logo.png"
    alt="World Wide Web Consortium Home"
    width="42" height="42" border="0" /></a>
    <% if(sess.email === undefined) { %>
      <div class="nav-buttons">
        <form action="/listings" id="nav-button">
          <input type="submit" value="Listings" />
        </form>
        <form action="/user/new" id="nav-button">
          <input type="submit" value="Sign up" />
        </form>
        <form action="/login" id="nav-button">
          <input type="submit" value="Sign in" />
        </form>
      </div>
    <% } %>
    <% console.log(sess.email) %>
    <% if(sess.email !== undefined) { %>
      <div class="nav-buttons">
        <form action="/listings/new" id="nav-button">
          <input type="submit" value="Become a host!" />
        </form>
        <form action="/listings" id="nav-button">
          <input type="submit" value="View listings" />
        </form>
        <form action="/user" id="nav-button">
          <input type="submit" value="My Account" />
        </form>
        <form action="/logout" id="nav-button">
          <input type="submit" value="Sign out" />
        </form>
      </div>
    <% } %>
  </div>
</html>




